{% extends 'base.html.twig' %}

{% block title %}Détails de la fermeture temporaire n° {{ blockedCourt.id }} - {{ court.name }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class=" d-flex justify-content-center">
        <a href="{{ path('app_blocked_courts_by_court', {'court_id': court.id}) }}" class="btn btn-warning m-3">Retour</a>
        {# <a href="{{ path('app_blocked_court_edit', {'court_id': court.id, 'id': id}) }}" class="btn btn-warning m-3">Modifier</a> #}
        {# {{ include('court/_delete_form.html.twig') }} #}
    </div>
    <div class="card shadow">
        <div class="card-header py-3">
            <p class="text-danger m-0 fw-bold text-center">Détails de la fermeture temporaire n° {{ blockedCourt.id }} ({{ court.name }})</p>
        </div>
        <div class="card-body">
            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                <table class="table table-striped table-hover my-0" id="dataTable ">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ blockedCourt.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom du Terrain bloqué : </th>
                            <td>{{ court.name }}</td>
                        </tr>
                        <tr>
                            <th>Raison de la fermeture : </th>
                            <td>{{ blockedCourt.blockedReason }}</td>
                        </tr>
                        <tr>
                            <th>Date et heure de début de la fermeture : </th>
                            <td>{{ blockedCourt.startDatetime ? blockedCourt.startDatetime|date('d-m-Y à H:i') : '-' }}</td>
                        </tr>
                        <tr>
                            <th>Date et heure de fin de la fermeture : </th>
                            <td>{{ blockedCourt.endDatetime ? blockedCourt.endDatetime|date('d-m-Y à H:i') : '-' }}</td>
                        </tr>
                        <tr>
                            <th>Date de création : </th>
                            <td>{{ court.createdAt ? court.createdAt|date('d-m-Y H:i') : '-' }}</td>
                        </tr>
                        <tr>
                            <th>Date de mise à jour : </th>
                            <td>{{ court.updatedAt ? court.updatedAt|date('d-m-Y H:i') : '-' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div> 
        </div>     
    </div>
</div>   
{% endblock %}
