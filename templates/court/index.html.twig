{% extends 'base.html.twig' %}

{% block title %}Utilisateurs {% endblock %}

{% block body %}
<div class="container-fluid">
        <div class="card shadow">
            <div class="card-header py-3">
                <p class="text-danger m-0 fw-bold text-center">Informations sur les terrains</p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md- text-nowrap">
                        <div id="dataTable_length" class="dataTables_length" aria-controls="dataTable">
                        <label class="form-label">Page
                            <select class="d-inline-block form-select form-select-sm">
                                    <option value="10" selected="">10</option>
                                    <option value="25">25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                            </select>
                        </label>
                    </div>
                    </div>
                </div>
        <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
            <table class="table table-striped table-hover my-0 list" id="dataTable ">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Photo</th>
                        <th>Nom</th>
                        <th>Club</th>
                        <th>Surface</th>
                        <th>Éclairage</th>
                        <th>Type</th>
                        <th>Heure d'ouverture</th>
                        <th>Heure de fermeture</th>
                        <th>Carte</th>
                        <th>Note</th>
                        <th>Date de rénovation</th>
                        <th>Date de création</th>
                        <th>Date de modification</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for court in courts %}
                        <tr>
                            <td>{{ court.id }}</td>
                            <td><img class="rounded-circle me-2" width="30" height="30" src="{{ court.picture }}"></td></td>
                            <td>{{ court.name }}</td>
                            <td>{{ court.club.name }}</td>
                            <td>{{ court.surface }}</td>
                            <td>{{ court.lightning }}</td>
                            <td>{{ court.type }}</td>
                            <td>{{ court.startTime|date('H:i') }}</td>
                            <td>{{ court.endTime|date('H:i') }}</td>
                            <td>{{ court.detailledMap }}</td>
                            <td>{{ court.ratingAvg }}</td>
                            <td>{{ court.renovatedAt|date('d-m-Y') }}</td>
                            <td>{{ court.createdAt|date('d-m-Y')}}</td>
                            <td>{{ court.updatedAt|date('d-m-Y')}}</td>
                            <td>
                                <a href="#" class="btn btn-sm btn-primary"><i class="bi bi-search"></i></a>
                                <a href="#" class="btn btn-sm btn-success"><i class="bi bi-pencil-square"></i></a>
                                <a href="#" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
{% endblock %}
