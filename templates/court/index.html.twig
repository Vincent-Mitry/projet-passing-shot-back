{% extends 'base.html.twig' %}

{% block title %}Terrains{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class=" d-flex justify-content-center">
        <a href="{{ path('app_court_new') }}" class="btn btn-warning m-3">Créer un nouveau terrain</a>
    </div>
        <div class="card shadow">
            <div class="card-header py-3">
                <p class="text-danger m-0 fw-bold text-center">Informations sur les terrains</p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md- text-nowrap">
                        <div id="dataTable_length" class="dataTables_length" aria-controls="dataTable">
                        <label class="form-label">Page
                            <select class="d-inline-block form-select form-select-sm">
                                    <option value="10" selected="">10</option>
                                    <option value="25">25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                            </select>
                        </label>
                    </div>
                    </div>
                </div>
        <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
        {{ include('_flash_messages.html.twig') }}
            <table class="table table-striped table-hover my-0 list" id="dataTable ">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Photo</th>
                        <th>Nom</th>
                        <th>Club</th>
                        <th>Surface</th>
                        <th>Éclairage</th>
                        <th>Type</th>
                        <th>Heure d'ouverture</th>
                        <th>Heure de fermeture</th>
                        <th>Plan</th>
                        <th>Note</th>
                        <th>Date de rénovation</th>
                        <th>Date de création</th>
                        <th>Date de modification</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for court in courts %}
                        <tr>
                            <td>{{ court.id }}</td>
                            <td><img class="rounded-circle me-2" width="30" height="30" src="{{ court.picture }}"></td>
                            <td>{{ court.name }}</td>
                            <td>{{ court.club.name|default('') }}</td>
                            <td>{{ court.surface.name|default('') }}</td>
                            <td>{{ court.lightning }}</td>
                            <td>{{ court.indoor }}</td>
                            <td>{{ court.startTime|date('H:i') }}</td>
                            <td>{{ court.endTime|date('H:i') }}</td>
                            <td>{{ court.detailedMap }}</td>
                            <td>{{ court.ratingAvg }}</td>
                            <td>{{ court.renovatedAt|date('d-m-Y') }}</td>
                            <td>{{ court.createdAt|date('d-m-Y')}}</td>
                            <td>{{ court.updatedAt ? court.updatedAt|date('Y-m-d') : '' }}</td>
                            <td>
                                <a href="{{ path('app_court_show', {'id': court.id})}}" class="btn btn-sm" style="color: white; background-color: #EA5C0A; border-color: white;"><i class="bi bi-search"></i></a>
                                <a href="{{ path('app_court_edit', {'id': court.id})}}" class="btn btn-sm" style="color: white; background-color: #FFCA2C; border-color: white;"><i class="bi bi-pencil-square"></i></a>
                                <a href="{{ path('app_court_block', {'court_id': court.id})}}" class="btn btn-sm" style="color: white; background-color: #A82300; border-color: white;"><i class="bi bi-file-lock2"></i></a>
                            </td>
                        </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
{% endblock %}
