{% extends 'base.html.twig' %}

{% block title %}Court{% endblock %}

{% block body %}
    <h1>Court</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ court.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ court.name }}</td>
            </tr>
            <tr>
                <th>Surface</th>
                <td>{{ court.surface }}</td>
            </tr>
            <tr>
                <th>Lightning</th>
                <td>{{ court.lightning ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ court.type ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>StartTime</th>
                <td>{{ court.startTime ? court.startTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndTime</th>
                <td>{{ court.endTime ? court.endTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ court.picture }}</td>
            </tr>
            <tr>
                <th>Detailled_map</th>
                <td>{{ court.detailledMap }}</td>
            </tr>
            <tr>
                <th>RatingAvg</th>
                <td>{{ court.ratingAvg }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ court.slug }}</td>
            </tr>
            <tr>
                <th>RenovatedAt</th>
                <td>{{ court.renovatedAt ? court.renovatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ court.createdAt ? court.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ court.updatedAt ? court.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_court_index') }}">back to list</a>

    <a href="{{ path('app_court_edit', {'id': court.id}) }}">edit</a>

    {{ include('court/_delete_form.html.twig') }}
{% endblock %}
