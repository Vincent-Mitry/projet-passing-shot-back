{% extends 'base.html.twig' %}

{% block title %}Utilisateurs {% endblock %}

{% block body %}
<div class="container-fluid">
        <div class="card shadow">
            <div class="card-header py-3">
                <p class="text-danger m-0 fw-bold text-center">Info utilisateurs</p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md- text-nowrap">
                        <div id="dataTable_length" class="dataTables_length" aria-controls="dataTable">
                        <label class="form-label">Page
                            <select class="d-inline-block form-select form-select-sm">
                                    <option value="10" selected="">10</option>
                                    <option value="25">25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                            </select>
                        </label>
                    </div>
                    </div>
                </div>
        <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
            <table class="table table-striped table-hover my-0" id="dataTable ">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Photo</th>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Adresse mail</th>
                        <th>Age</th>
                        <th>Genre</th>
                        <th>Level</th>
                        <th>Téléphone</th>
                        <th>Mot de passe</th>
                        <th>Date de création</th>
                        <th>Date de modification</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                        <tr>
                            <td>1</td>
                            <td><img class="rounded-circle me-2" width="30" height="30" src="{{ user.picture }}"></td></td>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.birthdate|date('d-m-Y') : '' }}</td>
                            <td>{{ user.gender }}</td>
                            <td>{{ user.level }}</td>
                            <td>{{ user.phone }}</td>
                            <td>{{ user.password }}</td>
                            <td> 
                            {% for role in user.roles %}
                            {{ role }}
                            {% endfor %}</td>
                            <td>{{ user.createdAt|date('d-m-Y') : ''  }}</td>
                            <td>{{ user.updateddAt|date('d-m-Y') : ''  }}</td>
                        </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
{% endblock %}
