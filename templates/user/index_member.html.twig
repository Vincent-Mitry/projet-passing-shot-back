{% extends 'base.html.twig' %}

{% block title %}Utilisateur {% endblock %}

{% block body %}
<div class="container-fluid">
    <div class=" d-flex justify-content-center">
        <a href="{{ path('app_user_new') }}" class="btn btn-warning m-3">Créer un nouvel utilisateur</a>
    </div>
    <div class="card shadow">
        <div class="card-header py-3 text-color-white">
            <p class="text-danger m-0 fw-bold text-center">Informations des utilisateurs</p>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md- text-nowrap">
                    <div id="dataTable_length" class="dataTables_length" aria-controls="dataTable">
                    <label class="form-label">Page
                        <select class="d-inline-block form-select form-select-sm">
                                <option value="10" selected="">10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                        </select>
                    </label>
                </div>
                </div>
            </div>
            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                <table class="table table-striped table-hover my-0 list text-center" id="dataTable ">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Photo</th>
                            <th>Prénom</th>
                            <th>Nom</th>
                            <th>Date de naissance</th>
                            <th>Adresse mail</th>
                            <th>Genre</th>
                            <th>Niveau</th>
                            <th>Téléphone</th>
                            <th>Rôle</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td><img class="rounded-circle me-2" width="30" height="30" src="{{ user.picture }}"></td></td>
                                <td>{{ user.firstname }}</td>
                                <td>{{ user.lastname }}</td>
                                <td>{{ user.birthdate|date('d-m-Y')}}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.gender.type }}</td>
                                <td>{{ user.level }}</td>
                                <td>{{ user.phone }}</td>
                                <td> 
                                {% for role in user.roles %}
                                {{ role }}
                                {% endfor %}</td>
                                <td>
                                    <a href="{{ path('app_user_show', {'id': user.id})}}" class="btn btn-sm" style="color: white; background-color: #EA5C0A; border-color: white;"><i class="bi bi-search"></i></a>
                                    <a href="{{ path('app_user_edit', {'id': user.id})}}" class="btn btn-sm" style="color: white; background-color: #FFCA2C; border-color: white;"><i class="bi bi-pencil-square"></i></a>
                                </td>
                            </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
