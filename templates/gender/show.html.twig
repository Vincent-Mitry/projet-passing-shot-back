{% extends 'base.html.twig' %}

{% block title %}Détails du genre  : {{ gender.type }}{% endblock %}

{% block body %}
<div class="container-fluid">
		<div class=" d-flex justify-content-between">
		<a href="{{ path('app_gender') }}" class="btn btn-warning m-3" style="color: white; background-color: #EA5C0A; border-color: white;">Retour</a>
		<div class=" d-flex justify-content-center">
			<a href="{{ path('app_gender_edit', {'id': gender.id}) }}" class="btn btn-warning m-3">Modifier</a>
			{{ include('gender/_delete_form.html.twig') }}
		</div>
	</div>
	<div class="card shadow">
		<div class="card-header py-3">
			<p class="text-danger m-0 fw-bold text-center">Détails du genre : {{ gender.type }}</p>
		</div>
		<div class="card-body">
			<div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
				<table class="table table-striped table-hover my-0" id="dataTable ">
					<tbody></tbody>
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ gender.id }}</td>
						</tr>
						<tr>
							<th>Type</th>
							<td>{{ gender.type }}</td>
						</tr>
						<tr>
							<th>Date de création</th>
							<td>{{ gender.createdAt ? gender.createdAt|date('Y-m-d H:i:s') : '-' }}</td>
						</tr>
						<tr>
							<th>Date de modification</th>
							<td>{{ gender.updatedAt ? gender.updatedAt|date('Y-m-d H:i:s') : '-' }}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
{% endblock %}
