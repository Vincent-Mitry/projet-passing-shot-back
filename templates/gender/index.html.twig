{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class=" d-flex justify-content-center">
        <a href="{{ path('app_gender_new') }}" class="btn btn-warning m-3">Ajouter un genre</a>
    </div>
    <div class="card shadow">
        <div class="card-header py-3">
            <p class="text-danger m-0 fw-bold text-center">Genres</p>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md- text-nowrap">
                    <div id="dataTable_length" class="dataTables_length" aria-controls="dataTable">
                        <label class="form-label">Page
                            <select class="d-inline-block form-select form-select-sm">
                                    <option value="10" selected="">10</option>
                                    <option value="25">25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                            </select>
                        </label>
                    </div>
                </div>
            </div>
            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                <table class="table table-striped table-hover my-0 list text-center" id="dataTable ">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Type</th>
                            <th>Date de cr√©ation</th>
                            <th>Date de modification</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for gender in genders %}
                        <tr>
                            <td>{{ gender.id }}</td>
                            <td>{{ gender.type }}</td>
                            <td>{{ gender.createdAt ? gender.createdAt|date('Y-m-d') : '-' }}</td>
                            <td>{{ gender.updatedAt ? gender.updatedAt|date('Y-m-d') : '-' }}</td>
                            <td>
                                <a href="{{ path('app_gender_show', {'id': gender.id})}}" class="btn btn-sm" style="color: white; background-color: #EA5C0A; border-color: white;"><i class="bi bi-search"></i></a>
                                <a href="{{ path('app_gender_edit', {'id': gender.id})}}" class="btn btn-sm" style="color: white; background-color: #FFCA2C; border-color: white;"><i class="bi bi-pencil-square"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
