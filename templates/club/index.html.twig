{% extends 'base.html.twig' %}

{% block title %}Clubs{% endblock %}

{% block body %}
<div class="container-fluid">
	<div class=" d-flex justify-content-center">
		<a href="{{ path('app_club_new') }}" class="btn btn-warning m-3">Ajouter un nouveau club</a>
	</div>
	<div class="card shadow">
		<div class="card-header py-3">
			<p class="text-danger m-0 fw-bold text-center">Informations sur les clubs</p>
		</div>
		<div class="card-body">
			<div class="row">
				<div class="col-md- text-nowrap">
					<div id="dataTable_length" class="dataTables_length" aria-controls="dataTable">
						<label class="form-label">Page
							<select class="d-inline-block form-select form-select-sm">
								<option value="10" selected="">10</option>
								<option value="25">25</option>
								<option value="50">50</option>
								<option value="100">100</option>
							</select>
						</label>
					</div>
				</div>
			</div>
			<div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
				<table class="table table-striped table-hover my-0 list" id="dataTable ">
					<thead>
						<tr>
							<th>#</th>
							<th>Logo</th>
							<th>Nom</th>
							<th>Description</th>
							<th>Heure d'ouverture</th>
							<th>Heure de fermeture</th>
							<th>Propriétaire</th>
							<th>Date de création</th>
							<th>Date de modification</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
					{% for club in clubs %}
					<tr>
						<td>{{ club.id }}</td>
						<td><img class="rounded-circle me-2" width="30" height="30" src="{{ club.logo }}"></td>
						<td>{{ club.name }}</td>
						<td>{{ club.description }}</td>
						<td>{{ club.startingTime|date('H:i') }}</td>
						<td>{{ club.endingTime|date('H:i') }}</td>
						<td>{{ club.user.firstname}}
							{{ club.user.lastname}}</td>
						<td>{{ club.createdAt|date('d-m-Y')}}</td>
						<td>{{ club.updatedAt|date('d-m-Y')}}</td>
						<td>
							<a href="{{ path('app_club_show', {'id': club.id})}}" class="btn btn-sm btn-primary"><i class="bi bi-search"></i></a>
							<a href="{{ path('app_club_edit', {'id': club.id})}}" class="btn btn-sm btn-success"><i class="bi bi-pencil-square"></i></a>
						</td>
					</tr>
					{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
{% endblock %}
