{% extends 'base.html.twig' %}

{% block title %}Club{% endblock %}

{% block body %}
<div class="container-fluid">
	<div class=" d-flex justify-content-between">
		<a href="{{ path('app_club') }}" class="btn m-3" style="color: white; background-color: #EA5C0A; border-color: white;">Retour</a>
		<div class="d-flex justify-content-center">
			<a href="{{ path('app_club_edit', {'id': club.id}) }}" class="btn btn-warning m-3">Modifier</a>
			{{ include('club/_delete_form.html.twig') }}
		</div>
	</div>
	<div class="card shadow">
		<div class="card-header py-3">
			<p class="text-danger m-0 fw-bold text-center">Détails du club : {{ club.name }}</p>
		</div>
		<div class="card-body">
			<div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
				<table class="table table-striped table-hover my-0" id="dataTable ">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ club.id }}</td>
						</tr>
						<tr>
							<th>Nom</th>
							<td>{{ club.name }}</td>
						</tr>
						<tr>
							<th>Horaire d'ouverture</th>
							<td>{{ club.startingTime ? club.startingTime|date('H:i') : '-' }}</td>
						</tr>
						<tr>
							<th>Horaire de fermeture</th>
							<td>{{ club.endingTime ? club.endingTime|date('H:i') : '-' }}</td>
						</tr>
						<tr>
							<th>Logo</th>
							<td>{{ club.logo ? club.logo : '-' }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td class="col-10">{{ club.description }}</td>
						</tr>
						<tr>
							<th>Date de création</th>
							<td>{{ club.createdAt ? club.createdAt|date('Y-m-d H:i:s') : '-' }}</td>
						</tr>
						<tr>
							<th>Date de modification</th>
							<td>{{ club.updatedAt ? club.updatedAt|date('Y-m-d H:i:s') : '-' }}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
{% endblock %}
