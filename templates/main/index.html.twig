{% extends 'base.html.twig' %}

{% block title %}Accueil {% endblock %}

{% block body %}
<div class="container"></div>
    <div class="row m-5 text-center">
        <!-- 3 last reservations -->
        <div class="col-12 col-md-4 ms-auto">
            <div class="card text-white mb-3">
                <div class="card-header bg-dark text-center">Informations sur les réservations</div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Date de création</th>
                                <th scope="col">Terrain</th>
                                <th scope="col">Heure de début</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for reservation in reservations %}
                            <tr>
                                <th scope="row">{{ reservation.id }}</th>
                                <td>{{ reservation.createdAt|date('d-m-Y')}}</td>
                                <td>{{ reservation.court.id }}</td>
                                <td>{{ reservation.startDateTime|date('d-m-Y-H:i') }}</td>
                                <td class="text-end">
                                <a href="#" class="btn btn-sm btn-primary"><i class="bi bi-search"></i></a>
                                    <a href="#" class="btn btn-sm btn-success"><i class="bi bi-pencil-square"></i></a>
                                    <a href="#" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="d-grid gap-4">
                        <a href="{{ path('app_reservation') }}" class="btn btn-success">Voir plus</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- 3 last courts -->
        <div class="col-12 col-md-4 me-auto">
            <div class="card text-white mb-3">
                <div class="card-header bg-dark text-center">Informations sur les terrains</div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Surface</th>
                                <th scope="col">Note</th>
                                <th scope="col">Éclairage</th>
                                <th scope="col">Type</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for court in courts %}
                            <tr>
                                <th scope="row">{{ court.id }}</th>
                                <td>{{ court.name}}</td>
                                <td>{{ court.surface }}</td>
                                <td>{{ court.ratingAvg}}</td>
                                <td>{{ court.lightning}}</td>
                                <td>{{ court.type}}</td>
                                <td class="text-end">
                                <a href="#" class="btn btn-sm btn-primary"><i class="bi bi-search"></i></a>
                                    <a href="#" class="btn btn-sm btn-success"><i class="bi bi-pencil-square"></i></a>
                                    <a href="#" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="d-grid gap-4">
                        <a href="{{ path('app_court') }}" class="btn btn-success">Voir plus</a>
                    </div>
                </div>
            </div>
        </div>
    </div>   
    <div class="row m-5 text-center">
        <!-- 3 last users --> 
        <div class="col-12 col-md-4 ms-auto">
            <div class="card text-white mb-3">
                <div class="card-header bg-dark text-center">Informations sur les utilisateurs</div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Prénom</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Âge</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <th scope="row">{{ user.id }}</th>
                                <td>{{ user.firstname}}</td>
                                <td>{{ user.lastname }}</td>
                                <td>{{ user.birthdate|date('d-m-Y')}}</td>
                                <td class="text-end">
                                <a href="#" class="btn btn-sm btn-primary"><i class="bi bi-search"></i></a>
                                    <a href="#" class="btn btn-sm btn-success"><i class="bi bi-pencil-square"></i></a>
                                    <a href="#" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="d-grid gap-4">
                        <a href="{{ path('app_user') }}" class="btn btn-success">Voir plus</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- 3 last clubs -->
        <div class="col-12 col-md-4 me-auto">
            <div class="card text-white mb-3">
                <div class="card-header bg-dark text-center">Informations sur les clubs</div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Propriétaire</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for club in clubs %}
                            <tr>
                                <th scope="row">{{ club.id }}</th>
                                <td>{{ club.name }}</td>
                                <th>{{ club.user.firstname}} {{ club.user.lastname}}</th>
                                <td class="text-end">
                                <a href="#" class="btn btn-sm btn-primary"><i class="bi bi-search"></i></a>
                                    <a href="#" class="btn btn-sm btn-success"><i class="bi bi-pencil-square"></i></a>
                                    <a href="#" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="d-grid gap-4">
                        <a href="{{ path('app_club') }}" class="btn btn-success">Voir plus</a>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</div>
{% endblock %}