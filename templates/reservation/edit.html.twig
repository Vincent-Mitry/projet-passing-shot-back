{% extends 'base.html.twig' %}

{% block title %}Modification de la réservation de
	{{ reservation.user.firstname }}
	{{ reservation.user.lastname }}
{% endblock %}

{% block body %}
<div class="container-fluid">
	<div class=" d-flex justify-content-center">
		<a href="{{ path('app_reservation') }}" class="btn btn-warning m-3">Retour</a>
		<a href="{{ path('app_reservation_deactivate', {'id': reservation.id})}}" class="btn btn-danger m-3">Annuler</a>
	</div>
	<div class="card shadow">
		<div class="card-header py-3">
			<p class="text-danger m-0 fw-bold text-center">Modification de la réservation de
				{{ reservation.user.firstname }}
				{{ reservation.user.lastname }}</p>
		</div>
		<div class="card-body">
			<div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
				<table class="table table-striped table-hover my-0" id="dataTable ">
					<tbody>
						<div class="m-3 p-5">{{ include('reservation/_form.html.twig', {'button_label': 'Enregistrer'}) }}</div>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
{% endblock %}
