{% extends 'base.html.twig' %}

{% block title %}Réservations
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class=" d-flex justify-content-between">
			<a href="{{ path('app_reservation') }}" class="btn btn-warning m-3">Retour</a>
			 <div class=" d-flex justify-content-center">
			<a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-warning m-3">Modifier</a>
			<a href="{{ path('app_reservation_deactivate', {'id': reservation.id})}}" class="btn btn-danger m-3">Supprimer</a>
		</div>
		</div>
		<div class="card shadow">
			<div class="card-header py-3">
				<p class="text-danger m-0 fw-bold text-center">Information sur la réservation de
					{{ reservation.user.firstname }}
					{{ reservation.user.lastname }}
				</p>
			</div>
			<div class="card-body">
				<div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
					<table class="table table-striped table-hover my-0" id="dataTable ">
						<tbody></tbody>
						<tbody>
							<tr>
								<th>Id</th>
								<td>{{ reservation.id }}</td>
							</tr>
							<tr>
								<th>A partir de
								</th>
								<td>{{ reservation.startDatetime ? reservation.startDatetime|date('d M H:i') : '' }}</td>
							</tr>
							<tr>
								<th>Jusqu'à</th>
								<td>{{ reservation.endDatetime ? reservation.endDatetime|date('d M H:i') : '' }}</td>
							</tr>
							<tr>
								<th>Nom du terrain</th>
								<td>{{ reservation.court.name }}</td>
							</tr>
							<tr>
								<th>Status</th>
								
									{% if reservation.status == 1 %}<td style="color:green">Actif</td>{% else %}<td style="color:red">Inactif
									{% endif %}
								</td>
							</tr>
							<tr>
								<th>Nombre de joueur</th>
								<td>{{ reservation.countPlayers}}</td>
							</tr>
							
							<th>Notation du terrain</th>
							<td>
								{% if reservation.court.ratingAvg == null %}
									Pas de notation
								{% else %}
									{{reservation.court.ratingAvg}}
								{% endif %}
							</td>
						</tbody>
					</tr>

				</tr>
				<tr>
					<th>Réservation faite le
					</th>
					<td>{{ reservation.createdAt ? reservation.createdAt|date('d-m-Y') : '' }}</td>
				</tr>
				<tr>
					<th>Dernière mise à jour</th>
					<td>{{ reservation.updatedAt ? reservation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>
	</div>
</div></div>{% endblock %}
